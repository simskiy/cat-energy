mixin picture-retina(classname, name, alt="фото")
  - var desktop = "min-width: 1220px";
  - var tablet = "min-width: 768px";
  - var mobile = "min-width: 320px";
  picture(class=classname)
    source(media=`(${desktop})`, srcset=`./img/${name}-desktop.jpg 1x, img/${name}-desktop@2x.jpg 2x, img/${name}-desktop@3x.jpg 3x`)
    source(media=`(${tablet})`, srcset=`./img/${name}-tablet.jpg 1x, img/${name}-tablet@2x.jpg 2x, img/${name}-tablet@3x.jpg 3x`)
    source(media=`(${mobile})`, srcset=`./img/${name}-mobile.jpg 1x, img/${name}-mobile@2x.jpg 2x, img/${name}-mobile@3x.jpg 3x`)
    img(src=`./img/${name}-mobile.jpg`, alt=alt)


mixin picture-img(classname, name, alt="Фото", attr)
  - var desktop = "min-width: 1220px";
  - var tablet = "min-width: 768px";
  - var mobile = "min-width: 320px";
  picture(class=classname)&attributes(attr)
    source(media=`(${desktop})`, srcset=`./img/${name}-desktop.png`)
    source(media=`(${tablet})`, srcset=`./img/${name}-tablet.png`)
    source(media=`(${mobile})`, srcset=`./img/${name}-mobile.png`)
    img(src=`./img/${name}-mobile.png`, alt=alt)

